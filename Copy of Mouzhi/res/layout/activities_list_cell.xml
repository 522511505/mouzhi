<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@color/main_color" >

        <ImageView
            android:id="@+id/activity_search"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/titleText"
            android:src="@drawable/actionbar_search_icon" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="校园活动"
            android:textColor="@color/tab_color"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/activity_publish"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/titleText"
            android:background="@drawable/actionbar_add_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/organization_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="3dp" >

            <TextView
                android:id="@+id/activities_list_organization"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="求索工作室"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activities_list_now_date"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:paddingLeft="180dp"
                android:text="11月30日"
                android:textColor="@color/light_gray"
                android:textSize="8.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activities_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="外国语、数学信息软件，让心与心再靠近一点！"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/organization_image"
            android:layout_width="300dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal" 
            android:transitionName="organization_image" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activities_previous"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="上一条"
            android:textColor="#00bfff" />

        <Button
            android:id="@+id/activities_detail"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="详情"
            android:textColor="#00bfff" />

        <Button
            android:id="@+id/activities_next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="下一条"
            android:textColor="#00bfff" />
    </LinearLayout>

</LinearLayout>