<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_relative"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" >

        <ImageView
            android:id="@+id/titleBg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/main_color" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:padding="10.0dip"
            android:singleLine="true"
            android:text="发布新活动"
            android:textColor="@color/tab_color"
            android:textSize="17sp" />
        
          <Button
                android:id="@+id/acticities_bt_publish"
                android:layout_width="48dp"
                android:layout_height="33dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/titleText"
                android:text="发布"
                android:background="@color/button_background_color"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />
          
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="活动主题"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/activities_publish_title"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:paddingStart="5dp"
                android:hint="请输入20个字以内的活动主题"
                android:maxLength="20"
                android:textColorHint="@color/light_gray"
                android:background="@drawable/edittext"
                android:textColor="@color/black"
                android:textSize="13.0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="海报照片添加"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/activities_publish_add_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/add_img" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="活动具体内容介绍"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/activityies_publish_detail"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:hint="请输入500个字以内的活动主题"
                android:textColorHint="@color/light_gray"
                android:maxLength="500"
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:paddingStart="5dp"
                android:background="@drawable/edittext"
                android:textSize="13sp" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>